{% extends "generic.djhtm" %}
{% comment %} coding: utf-8 {% endcomment %}
{% load gsb_extras %}
{% block content %}
    {% block bouton_haut %}
    <table width="100%" id="boutons" class="table">
        <tr><td width="100%" class="boutton"><a href="{% url gsb.views.index %}">retour liste comptes</a></td></tr></table>
        <form method="post" action="" id="form1">{% csrf_token %}
            <table width="100%" id="date_s" class="table">
                {{ form }}
                <tr><td><input type="submit" value="Submit" /></td></tr>
            </table>
        </form>

    {% endblock bouton_haut %}
    <br/>
    <table id="main"class="table">
        <thead class="entete">
        <tr>{%block titre_col_ope %}
            <th>ID</th>
            <th>Date</th>
            <th>Tiers</th>
            <th class="opTier">Catégorie</th>
            <th class="opDebit">Crédit</th>
            <th class="opDebit">Débit</th>{% endblock titre_col_ope %}
        </tr>
        </thead>
        {% for ope in opes %}
            {% block ope %}
                <tr class="item hover{% if ope.montant > 0 %} creditElement {% endif %}{% if ope.montant < 0 %} debitElement {% endif %}{% if ope.rapp or ope.jumelle and ope.jumelle.rapp %}rappElement{% endif %}">
                    <td class="opDate opCenter"> {{ ope.id }}</td>
                    <td class="opDate opCenter">{{ ope.date}} </td>
                    <td class="opTier opCenter">{% if ope.tiers.is_titre %}{{ ope.tiers.titre.nom }} {% else %}{{ ope.tiers.nom|default:"aucun tiers" }}{% endif %}</td>
                    <td class="opTier">{{ ope.cat.nom|default:"aucune cat&eacute;gorie" }}</td>
                    <td class="opCredit">{% if ope.montant > 0 %}{{ ope.montant|cur }}{% else %} - {% endif %}</td>
                    <td class="opDebit">{% if ope.montant < 0 %}{{ ope.montant|cur }}{% else %} - {% endif %}</td>
                </tr>
            {% endblock ope %}
        {% empty %}
            <tr class="item">
                <td colspan="6">
                    aucune op&eacute;ration n&#39;est affich&eacute;e.<br/>
                </td>
            </tr>
        {% endfor %}
        {% block footer %}
            <tr class="footerbar">
            <td colspan="4" class="cptLabel">Solde</td>
            <td colspan="2" class="cptSolde">{{ solde|cur }}</td>
        </tr>
        {% endblock footer %}
    </table>
{% endblock content %}
